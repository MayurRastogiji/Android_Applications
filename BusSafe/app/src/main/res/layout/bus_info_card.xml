<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/BusCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="25mm"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BusCardId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="route_1-bus_10"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FacultyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faculty name"
                android:textColor="@color/offwhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/FacultyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact number"
                android:textColor="@color/offwhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Student = " />

                <TextView
                    android:id="@+id/TotalStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Student = " />

                <TextView
                    android:id="@+id/PresentStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent Student = " />

                <TextView
                    android:id="@+id/AbsentStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/view"
                android:text="view"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>